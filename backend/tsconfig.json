{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "jest"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "src/__tests__/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}